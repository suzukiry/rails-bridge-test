<div class="container">
    <% result_collection = Array.new %>
    <% passed_word_array = Array.new %>
    <% failed_word_array = Array.new %>
    <% result_collection = result_collection(test_id) %>
    <% passed_word_array = result_collection[0] %>
    <% failed_word_array = result_collection[1] %>
    <div class="row col-xs-12 col-sm-4 col-md-6 col-lg-6">
        <div class="col-xs-12 col-sm-4 col-md-2 col-lg-2">
            <div class="">
                <div class="">
                </div>
                <div class="info">
                    <h4 class="text-center">点数</h4>
                    <p> <%= test_score(test_id) %> / 2</p>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-5 col-lg-5">
            <div class="box">
                <div class="box-icon">
                    <span class="fa fa-2x fa-thumbs-o-up"></span>
                </div>
                <div class="info">
                    <h4 class="text-center">正解</h4>
                    <% if passed_word_array.any? %>
                        <% passed_word_array.each do |passed_word| %>
                            <div><a href="<%=passed_word[1] %>"><%= passed_word[0] %></a></div>
                        <% end %>
                    <% else %>
                        None.
                    <% end %>
                </div>
            </div>
        </div>
        
        <div class="col-xs-12 col-sm-4 col-md-5 col-lg-5">
            <div class="box">
                <div class="box-icon">
                    <span class="fa fa-2x fa-thumbs-o-down"></span>
                </div>
                <div class="info">
                    <h4 class="text-center">不正解</h4>
                    <% if failed_word_array.any? %>
                        <% failed_word_array.each do |failed_word| %>
                            <div><a href="<%=failed_word[1]%>"><%= failed_word[0] %></a></div>
                        <% end %>
                    <% else %>
                        None.
                    <% end %>
                </div>
            </div>
        </div>
	</div>
</div>